<div class="col-lg-12">
  <div class="card rounded-0 mt-5 mb-5">
    <div class="card-body mx-5 text-center">
      <h2 class="text-center border w-50 mx-auto ">Doc  Details</h2>
      <div class="row ">
        <div class="col-lg-6 mt-3 text-center mx-auto">
          <% if @document.image.attached? %>
          <%= image_tag @document.image, class: "img-fluid" %>
          <%end%>
          <p class="lead"><strong> Name:</strong> <%= @document.name %></p>
          <p class="lead"><strong> Type</strong> <%= @document.doc_type %></p>
          <p class="lead"><strong>Employee:</strong> <%= @document.employee.name %></p>
          
        </div>
      </div>

      <%= link_to 'Back to Documents list',documents_path,class:"btn btn-outline-secondary text-dark rounded-0 mx-auto "%>
      <%= link_to 'Edit  Document Details ',edit_document_path(@document),class:"btn btn-outline-primary mx-auto" %>

    </div>
  </div>
</div>
