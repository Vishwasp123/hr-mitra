<div class="col-lg-12">
  <%= flash[:notice] %>
  <div class="card mt-5 mb-5">
    <div class="card-body">
      <h2 class="text-center">Document Table</h2>
    </div>
  </div>
   <%= link_to "Create New Document", new_document_path, class:"btn btn-primary btn-md mb-4 rounded-0" %>
  <table class="table table-bordered">
    <thead>
      <tr>
         <th> Name</th>
        <th>Doc type</th>
        <th>Employee id</th>
        <th>Action</th>
      </tr>
    </thead>
    <tboby>
      <% @documents.each do |document| %>
      <tr>
        <td><%= document.name %></td>
        <td><%= document.doc_type %></td>
        <td><%= link_to document.employee.name, employees_path(document.employee) %></td>
        <td>
          <%= link_to "Edit",edit_document_path(document), class:"btn btn-outline-primary "  %>
           <%= link_to "View",document_path(document), class:"btn btn-outline-info"  %>
             <%= link_to "Delete",document_path(document), class:"btn btn-outline-danger",method: :delete, data: { confirm: 'Are you sure to delete this document?'} %>
           </td>

      </tr>
      <% end %>
    </tboby>
  </table>



